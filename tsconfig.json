{
    "compilerOptions": {
        "allowJs": true,
        "module": "commonjs",
        "skipLibCheck": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "inlineSources": true,
        "sourceMap": true,
        "baseUrl": ".",
        "outDir": "dist",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "strict": true,
        "jsx": "react-jsx",
        "downlevelIteration": true,
        "paths": {
            "#lib/*": ["./src/lib/*"],
            "#instances/*": ["./src/lib/instances/*"],
            "#windows/*": ["./src/windows/*"],
            "#components/*": ["./src/components/*"],
            "#img/*": ["./img/*"],
            "#*": ["./src/*"]
        }
    },
    "include": ["src/**/*"]
}
